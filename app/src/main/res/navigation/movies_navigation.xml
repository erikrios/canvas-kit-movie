<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_navigation"
    app:startDestination="@id/discoverMoviesFragment">

    <fragment
        android:id="@+id/discoverMoviesFragment"
        android:name="io.erikrios.github.canvaskitmovie.ui.movies.DiscoverMoviesFragment"
        android:label="fragment_discover_movies"
        tools:layout="@layout/fragment_discover_movies">
        <action
            android:id="@+id/action_discoverMoviesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="io.erikrios.github.canvaskitmovie.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="movie"
            app:argType="io.erikrios.github.canvaskitmovie.data.model.Movie" />
    </fragment>
</navigation>