<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_shows_navigation"
    app:startDestination="@id/discoverTvShowsFragment">

    <fragment
        android:id="@+id/discoverTvShowsFragment"
        android:name="io.erikrios.github.canvaskitmovie.ui.view.tvshows.DiscoverTvShowsFragment"
        android:label="fragment_discover_tv_shows"
        tools:layout="@layout/fragment_discover_tv_shows">
        <action
            android:id="@+id/action_discoverTvShowsFragment_to_tvShowDetailsFragment"
            app:destination="@id/tvShowDetailsFragment" />
        <action
            android:id="@+id/action_discoverTvShowsFragment_to_favoritesTvShowDashboardFragment"
            app:destination="@id/favoritesTvShowDashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/tvShowDetailsFragment"
        android:name="io.erikrios.github.canvaskitmovie.ui.view.tvshows.TvShowDetailsFragment"
        android:label="fragment_tv_show_details"
        tools:layout="@layout/fragment_tv_show_details">
        <argument
            android:name="tvShow"
            app:argType="io.erikrios.github.canvaskitmovie.data.model.TvShow" />
    </fragment>
    <fragment
        android:id="@+id/favoritesTvShowDashboardFragment"
        android:name="io.erikrios.github.canvaskitmovie.ui.view.favorites.FavoritesMovieFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites_movie" />
</navigation>